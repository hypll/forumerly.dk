    <% if (user.darkmode === "true")  {%> 
    <body class="dark-mode">
    <% } else { %>
    <body>
    <% } %>

    
        <%- include("./components/Navbar.ejs") %> <%-
        include("./components/loader.ejs") %>
        <div class="container mt-5">
            <% if (error.length > 0) { %>
            <div class="alert alert-danger alert-remove fade-out" role="alert">
                <%= error %>
            </div>
            <% } %> <% if (success.length > 0) { %>
            <div class="alert alert-success alert-remove fade-out" role="alert">
                <%= success %>
            </div>
            <% } %>

            <div>
                <h1>Indstillinger</h1>
                <hr />

                <form class="row" action="/api/@me/darkmode" method="post">
                    <div class="col-md-6">
                        <div class="form-group mb-2">
                            <label for="darkmode"
                                ><i class="fa-solid fa-moon"></i>
                                Darkmode</label
                            >
                            <select
                                class="form-control"
                                id="darkmode"
                                name="darkmode"
                            >
                                <% if (user.darkmode === "true") { %> 
                                <option value="true">Aktiv</option>
                                <option value="false">Inaktiv</option>
                                <% } else { %>
                                    <option value="false">Inaktiv</option>
                                    <option value="true">Aktiv</option>
                                <% } %> 
                                
                            </select>
                        </div>

                        <input
                            type="hidden"
                            name="userId"
                            value="<%= user.id %>"
                        />
                        <button type="submit" class="btn btn-green">
                            Opdater theme
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>
